{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts", "config/**/*.ts", "test/**/*.ts", "ormconfig.*.ts"],
  "exclude": ["node_modules", "dist"]
}
